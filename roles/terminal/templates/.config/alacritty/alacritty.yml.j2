font:
  normal:
    family: JetBrainsMono Nerd Font 
    style: Regular

  bold:
    family: JetBrainsMono Nerd Font 
    style: Bold

  italic:
    family: JetBrainsMono Nerd Font 
    style: Italic

  bold_italic:
    family: JetBrainsMono Nerd Font 
    style: Bold Italic

  size: 16

shell:
  program: {{ fish_bin_prefix }}/fish
  args:
   - --login

{% if ansible_distribution == "Darwin" %}
key_bindings:
  - {key: Return,   mods: Command,         action: ToggleSimpleFullscreen }
{% endif %}


window:
  dimensions:
    columns: 140
    lines: 60
