fi

# rbenv function
rbenv() {
    local command="$1"
    shift

    case "$command" in
        rehash|shell)
            eval "$(command rbenv "sh-$command" "$@")"
            ;;
        *)
            command rbenv "$command" "$@"
            ;;
    esac
}

status() {
    local code=$?
    echo "Exit status: $code"
    
    case $code in
        0)   echo "✓ Success" ;;
        1)   echo "✗ General error" ;;
        2)   echo "✗ Misuse of shell command" ;;
        126) echo "✗ Command cannot execute" ;;
        127) echo "✗ Command not found" ;;
        130) echo "✗ Terminated by Ctrl+C" ;;
        *)   echo "✗ Error code $code" ;;
    esac
}

search_web() { 
  if pgrep brave > /dev/null; then
    brave-browser "https://duckduckgo.com/?q=$*&t=brave&ia=web" > /dev/null; 
  else
    echo "Brave is not running"
  fi
}

open_web() { 
  if pgrep brave > /dev/null; then
    brave-browser "https://$*" > /dev/null; 
  else
    echo "Brave is not running"
  fi
}

function j {
    if [ $# -eq 0 ]; then
        jobs
    elif [ $# -eq 1 ] && [[ $1 =~ ^[0-9]+$ ]]; then
        fg $1
    else
        "$@" &> /dev/null &
    fi
}

