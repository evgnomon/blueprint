#!/bin/bash

mk_role() {
  if [ -z "$1" ]; then
    echo "Usage: create_ansible_role <role_name>"
    return 1
  fi

  ROLE_NAME=$1

  mkdir -p "roles/$ROLE_NAME"/{tasks,handlers,files,templates,vars,defaults,meta}
  
  echo "---" > "roles/$ROLE_NAME/tasks/main.yaml"
  echo "---" > "roles/$ROLE_NAME/handlers/main.yaml"
  echo "---" > "roles/$ROLE_NAME/vars/main.yaml"
  echo "---" > "roles/$ROLE_NAME/defaults/main.yaml"
  echo "---" > "roles/$ROLE_NAME/meta/main.yaml"

  cat << EOF > "roles.yaml"
- hosts: localhost
  gather_facts: no
  roles:
    - $ROLE_NAME
  tags:
    - never
    - $ROLE_NAME
EOF

}

mk_role "$@"
