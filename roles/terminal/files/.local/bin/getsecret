#!/usr/bin/env fish
set -x EDITOR vi

set SECRET_FILE $HOME/.config/blueprint/secrets/secrets.yaml
if test -n "$argv[1]"
  set SECRET_FILE $HOME/.config/blueprint/secrets/$argv[1].yaml
end

set VAULT_FILE vault
if test -n "$argv[1]"
  set VAULT_FILE $argv[1].vault
end

if not test -f $HOME/.config/blueprint/secrets/$VAULT_FILE.asc
  echo "Vault file not found: $HOME/.config/blueprint/secrets/$VAULT_FILE.asc"
  exit 1
end

if not test -f $SECRET_FILE
  echo "Secret file not found: $SECRET_FILE"
  exit 1
end

ANSIBLE_VAULT_PASSWORD_FILE=(vault -d $VAULT_FILE | psub) ansible-vault view $SECRET_FILE | yj
