set-option -g default-command /bin/bash
set -g mouse on
setw -g mode-keys vi
set-option -g history-limit 1000000
set-option -g history-limit 1000000
set -g default-terminal "screen-256color"
set -ga terminal-overrides ",*256col*:Tc"
set -g set-titles on
set -g set-titles-string "#T"
set -g status-left ""
set -g status-right ""

set -g status-style bg=#282828,fg=#ebdbb2
set -g status-left-length 40
set -g status-right-length 80

# Status left (session name)
set -g status-left "#[fg=#282828,bg=#98971a,bold] #S #[fg=#98971a,bg=#282828]"

# Window status
set -g window-status-format "#[fg=#a89984,bg=#282828] #I:#W "
set -g window-status-current-format "#[fg=#282828,bg=#d79921,bold] #I:#W #[fg=#d79921,bg=#282828]"

# Pane borders
set -g pane-border-style fg=#504945
set -g pane-active-border-style fg=#98971a

# Message styling
set -g message-style bg=#d79921,fg=#282828
set -g message-command-style bg=#282828,fg=#ebdbb2

# Pane number display
set -g display-panes-active-colour "#98971a"
set -g display-panes-colour "#d79921"

# Clock mode
set -g clock-mode-colour "#98971a"

# Copy mode highlighting
set -g mode-style bg=#d79921,fg=#282828

# Refresh status bar every 30 seconds (don't spam the API)
set -g status-interval 30
